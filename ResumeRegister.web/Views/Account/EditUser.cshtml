@model UserEditViewModel
@{
    ViewData["Title"] = "ویرایش مشخصات";
}
@if (TempData["EditUserSuccess"]!=null)
{
    <div class="alert alert-primary" role="alert">
        <i class="icon fa fa-thumbs-o-up fa-3x"></i>
         ویرایش با موفقیت انجام شد .
    </div>
    <br />
}
<form class="bg-white rounded shadow-5-strong p-5" asp-action="EditUser" asp-controller="Account">
    <input type="hidden" asp-for="UserId" />
    <!-- UserName input -->
    <div class="form-outline mb-4">
        <input type="text" asp-for="UserName" class="form-control" readonly="readonly" />
        <label class="form-label" asp-for="UserName"></label>
    </div>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="email" asp-for="Email" class="form-control" readonly="readonly" />
        <label class="form-label" asp-for="Email"></label>
    </div>
    <!-- First Name input -->
    <div class="form-outline mb-4">
        <input type="text" asp-for="FirstNameUser" class="form-control" />
        <label class="form-label" asp-for="FirstNameUser"></label>
    </div>
    <!-- Last Name input -->
    <div class="form-outline mb-4">
        <input type="text" asp-for="LastNameUser" class="form-control" />
        <label class="form-label" asp-for="LastNameUser"></label>
    </div>
    <div class="card border border-2 border-info m-2">
        <div class="card-header">
            تغییر رمز عبور
        </div>
        <div class="card-body ">
            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="password" asp-for="Password" class="form-control" />
                <label class="form-label" asp-for="Password">رمز عبور جدید</label>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-1">
                <input type="password" asp-for="RePassword" class="form-control" />
                <label class="form-label" asp-for="RePassword">تکرار رمز عبور جدید</label>
            </div>
        </div>
    </div>

    <!-- Submit button -->
    <div>
        <button type="submit" class="btn btn-primary btn-block">ویرایش</button>
        <!-- 2 column grid layout for inline styling -->
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>